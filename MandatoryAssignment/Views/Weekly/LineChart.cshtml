@model MandatoryAssignment.Models.WeeklyViewModel
@{
    ViewBag.Title = "Line chart";
}
<ul class="row nav nav-tabs">
    <li>@Html.ActionLink("Yearly", "LineChart", "Yearly")</li>
    <li>@Html.ActionLink("Weekly", "LineChart", "Weekly")</li>
</ul>
<div class="row btn-group-vertical col-md-2" role="group">
    @Html.Partial("_ChartMenu")
    @using (Html.BeginForm("LineChart", "Weekly"))
    {
        <div class="form-group">
            @Html.DropDownList("stofNavn", new SelectList(ViewBag.Stof, "StofNavn"), "Select all", new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownList("maalested", new SelectList(ViewBag.Maalested, "Maalested"), "Select all", new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.TextBox("weekNumber", (string)ViewBag.CurrentWeek, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" value="Show selected">
        </div>
    }
</div>

<div id="chart">
    @Html.Partial("_LineChart")
</div>
@section Scripts
{
    <script type="text/javascript">
        $(function() {
            setInterval(function () {
                $('#chart').load('Weekly/_LineChartLineChart').show();
            },
            30000);
        });
    </script>
}
